{
  "name": "arthsaarthi-frontend",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "homepage": "./",
  "author": {
    "name": "ArthSaarthi",
    "email": "contact@aashish.ai.in"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint -c .eslintrc.cjs . --ext .ts,.tsx",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.arthsaarthi",
    "productName": "ArthSaarthi",
    "icon": "public/ArthSaarthi.png",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/arthsaarthi-backend",
        "to": "arthsaarthi-backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.7.2",
    "chart.js": "^4.4.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.60.0",
    "react-router-dom": "^6.23.1",
    "portfinder": "^1.0.32",
    "electron-is-dev": "^3.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^25.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-testing-library": "^7.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "ts-jest": "^29.2.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
